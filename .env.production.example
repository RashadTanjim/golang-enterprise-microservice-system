# Docker Compose project name
COMPOSE_PROJECT_NAME=enterprise-ms-prod

# Backend image source (from GHCR CI/CD workflow)
IMAGE_REGISTRY=ghcr.io
IMAGE_REPOSITORY=rashadtanjim/enterprise-microservice-system
IMAGE_TAG=latest

# Public port exposed by the API gateway (web-portal nginx)
PUBLIC_API_PORT=8080

# Shared database configuration
APP_DB_USER=postgres
APP_DB_PASSWORD=replace-with-strong-db-password
APP_DB_NAME=appdb

# Logging and rate limits
MIGRATION_SERVICE_LOG_LEVEL=info
USER_SERVICE_LOG_LEVEL=info
ORDER_SERVICE_LOG_LEVEL=info
AUDIT_LOG_SERVICE_LOG_LEVEL=info
USER_SERVICE_RATE_LIMIT=200
ORDER_SERVICE_RATE_LIMIT=200
AUDIT_LOG_SERVICE_RATE_LIMIT=200

# Authentication
AUTH_JWT_SECRET=replace-with-strong-jwt-secret-min-32-chars
AUTH_JWT_ISSUER=enterprise-microservice-system
AUTH_JWT_AUDIENCE=enterprise-microservice-system
AUTH_TOKEN_TTL_MINUTES=60
AUTH_CLIENT_ID=admin
AUTH_CLIENT_SECRET=replace-with-strong-client-secret
AUTH_CLIENT_ROLES=admin
AUTH_SERVICE_SUBJECT=order-service
AUTH_SERVICE_ROLES=service

# Circuit breaker
CIRCUIT_BREAKER_MAX_REQUESTS=3
CIRCUIT_BREAKER_INTERVAL=60
CIRCUIT_BREAKER_TIMEOUT=30

# Redis
REDIS_ENABLED=true
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL_SECONDS=300

# Audit integration
AUDIT_LOG_SERVICE_ENABLED=true
AUDIT_LOG_SERVICE_TIMEOUT_SECONDS=3
