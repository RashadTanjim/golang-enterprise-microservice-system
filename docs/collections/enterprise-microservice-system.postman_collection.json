  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Issue Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url_user}}/api/v1/auth/token",
              "host": [
                "{{base_url_user}}"
              ],
              "path": [
                "api",
                "v1",
                "auth",
                "token"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"client_id\": \"{{client_id}}\",\n  \"client_secret\": \"{{client_secret}}\",\n  \"roles\": [\"admin\"]\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status 200\", function () { pm.response.to.have.status(200); });",
                  "const json = pm.response.json();",
                  "pm.test(\"Token present\", function () { pm.expect(json.data).to.have.property(\"access_token\"); });",
                  "if (json && json.data && json.data.access_token) {",
                  "  pm.environment.set(\"token\", json.data.access_token);",
                  "}"
                ]
              }
            }
          ]
        }
      ]
    },
